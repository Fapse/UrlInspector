<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fapse.urlInspector.view.UrlWorkAreaController">
   <children>
      <HBox spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="txtUrl" onAction="#handleStart" onKeyTyped="#validateUrlInput" promptText="Enter Url here" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnStart" onAction="#handleStart" text="Start" />
         </children>
      </HBox>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="listLinks" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
