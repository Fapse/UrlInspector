<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fapse.urlInspector.view.UrlModelViewController">
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="txtUrl" onAction="#handleStart" onKeyTyped="#validateUrlInput" promptText="Enter Url here" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnStart" mnemonicParsing="false" onAction="#handleStart" text="Start" />
               </children>
            </HBox>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <ListView fx:id="listLinks" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
